<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Cool_Chat" Height="450" Width="520" Loaded="Window_Loaded" Closing="Window_Closing" WindowStyle="ThreeDBorderWindow" Icon="/chat_icon-icons.com_67748.ico">
    <Grid Margin="0">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="15"/>
            <ColumnDefinition Width="125"/>
            <ColumnDefinition Width="36"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Button x:Name="bConnDicon" Click="Button_Click" Content="Connect" Margin="10,10,10,0" Width="156" VerticalAlignment="Top" Grid.ColumnSpan="3"/>
        <TextBox x:Name="tbUserName" Margin="22,11,10,0" TextWrapping="Wrap" Text="Имя" VerticalAlignment="Top" Grid.Column="3"/>

        <ListBox x:Name="lbchat" Margin="10,57,10,10" Grid.ColumnSpan="4" Grid.RowSpan="2"/>

        <TextBox x:Name="tbMessage" Margin="10,10,10,10" Grid.Row="2" Grid.ColumnSpan="4" TextWrapping="Wrap" Height="70" KeyDown="tbMessage_KeyDown"/>
    </Grid>
</Window>
